<Window x:Class="GameInterface.GameSettings.WaitForServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameInterface.GameSettings"
        mc:Ignorable="d"
        Title="WaitForServerDialog" Height="234" Width="800">
    <Grid Margin="10">
        <TextBlock Text="サーバの接続を待っています" FontSize="32" Foreground="Gray" VerticalAlignment="Top"/>
        <Grid Margin="10,60,10,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="Progress" Height="40" Value="100" IsIndeterminate="true" Margin="10" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
